.chat-main
  .main-header
    .main-header__left-box
      %p.main-header__left-box__current-group
        = @group.name
      %ul.main-header__left-box__member-list
        Memberï¼š
        - @group.users.each do |user|
          %li.main-header__left-box__member-list__member
            = user.name
    .main-header__edit-btn
      = link_to edit_group_path(@group)
  .messages
    = render @messages
  .form
    %form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'input-box', placeholder: 'type a message'
      .form__mask
        = f.label :image, class: 'input-box__text' do
          = fa_icon 'picture-o', class: 'input-box__image'
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'
