%html
  %head
  %body
    .chat-side
      .side-header
        .side-header__box
          %p.side-header__box__user-name seo
          %ul.side-header__box__menu
            %li.side-header__box__menu__new-group
              = link_to "" do
                = fa_icon 'edit'
            %li.side-header__box__menu__edit-user
              = link_to "" do
                = fa_icon 'cog'
      .groups
        .group
          %p.group__group-name Sample
          %p.group__latest-message Good bye world!
        .group
          %p.group__group-name Sample2
          %p.group__latest-message Good bye world again!

    .chat-main
      .main-header
        .main-header__left-box
          %p.main-header__left-box__current-group Sample
          %ul.main-header__left-box__member-list
            Memberï¼š
            %li.main-header__left-box__member-list__member seo
            %li.main-header__left-box__member-list__member neko
        .main-header__edit-btn Edit
      .messages
        .message
          .message__upper-info
            %p.message__upper-info__talker seo
            %p.message__upper-info__date 2016/09/21 06:16:55
          %p.message__text Hello world!
        .message
          .message__upper-info
            %p.message__upper-info__talker neko
            %p.message__upper-info__date 2016/09/22 06:16:55
          %p.message__text Good bye world!
      .form
        %form
          .input-box
            %input.input-box__text{:placeholder => "type a message", :type => "text"}
            %label.input-box__image{:for => "message_image"}
              %i.fa.fa-image
              %input#message_image.input-box__image__file{:name => "message[image]", :type => "file"}
          %input.submit-btn{:type => "submit", :value => "Send"}



